<h1>New Event</h1>

<%= form_with model: @event do |f| %>
  <div>
    <%= f.label :date %>
    <%= f.datetime_field :date %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>
  <%= f.label :public, "Public Event" %>
  <%= f.check_box :public %>
</div>

  <div>
    <%= f.submit "Create Event" %>
  </div>
<% end %>